<h1>Photo Details</h1>

<img src="<%= @photo.source %>">

<p>
  <%= @photo.caption %>
</p>

<p>
  <%= time_ago_in_words(@photo.created_at) %> ago
</p>

<a href="/photos" class="btn btn-default">
  Go back
</a>

<a href="/photos/<%= @photo.id %>/edit" class="btn btn-default">
  Edit
</a>

<a href="/delete_photo/<%= @photo.id %>" class="btn btn-default">
  Delete
</a>
